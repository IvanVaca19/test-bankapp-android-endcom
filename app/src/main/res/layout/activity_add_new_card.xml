<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AddNewCard">

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_light">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleimage_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_card_credit"
            app:civ_border_color="@color/gray"
            app:civ_border_width="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            app:civ_circle_background_color="@color/white" />



        <TextView
            android:id="@+id/lv_add_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asociar Tarjeta"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/azul2"
            android:layout_gravity="center_vertical"
            />



        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Numero de tarjeta"
            android:background="@drawable/edittext_custom"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/diatxt"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_custom"
                android:hint="Cuenta"
                android:inputType="date"
                android:maxLength="2"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/aÃ±otxt"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_custom"
                android:hint="Issure"

                android:textSize="15dp" />


        </LinearLayout>






        <EditText
            android:id="@+id/edittext_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre de la tarjeta"
            android:background="@drawable/edittext_custom"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:inputType="phone" />


        <EditText

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre de la tarjeta"
            android:background="@drawable/edittext_custom"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:inputType="phone" />


        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText

                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_custom"
                android:hint="Estatus"
                android:inputType="date"
                android:maxLength="2"
                android:textSize="15dp" />


            <EditText

                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_custom"
                android:hint="Saldo"

                android:textSize="15dp" />


        </LinearLayout>



        <EditText

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre de la tarjeta"
            android:background="@drawable/edittext_custom"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:inputType="phone" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center">


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            />

        <Button
            android:id="@+id/register_emp_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/add"
            android:textAllCaps="false"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/white"
            android:enabled="false"/>

    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>